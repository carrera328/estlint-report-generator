        "eslint:recommended",
        "plugin:svelte/recommended",
        "@salesforce/eslint-config-lwc/recommended" // good ruleset
    ],
    "env": { "browser": true, "es2021": true, "node": true },
    "parser": "@babel/eslint-parser",
